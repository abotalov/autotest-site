= form_for(@folder, remote: true, id:'dateform') do |f|
  %label
    = 'Reports for:'
  %input{type: "text", id: "theDate", name: "theDate", value: @folder }
  %input{type: 'button', value: 'Date', onclick: "displayCalendar(document.forms[0].theDate,'yyyy-mm-dd',this)"}
  = f.submit("View Reports")

%div{id: 'left_section'}

  = render partial: 'run_test'
  %hr
  %div{style: 'height:21px'}
    %a.row{id: 'upd_label', style: 'margin-left: 25%; margin-bottom:2%', class: 'linkbutton', href: '#', onclick:"return false;"}
      = 'Update reports list'
  %hr
  = render partial: 'update_code'
  %hr
  = render partial: 'stop_test'
%div.report
  = render partial: 'nightly_tests'
  = render partial: 'manual_tests'
