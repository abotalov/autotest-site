= simple_form_for :environment, url: run_test_path, html: {target: '_blank'} do |f|
  = f.simple_fields_for :test do |sf|
    %div.row
      = sf.label 'Env:'
      = sf.select :env, Environment.all.map(&:name)
    %div.row
      = sf.label 'Test:'
      = sf.select :test, Automatedtest.all.map(&:name)
  = f.submit 'Run Test'